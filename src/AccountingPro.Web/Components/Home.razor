    <h2>Quick Actions</h2>
    <div class="row">
        <div class="col-md-2">
            <a href="/invoices/create" class="quick-action-btn">
                <div class="icon">📄</div>
                <span>New Invoice</span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="/bills/create" class="quick-action-btn">
                <div class="icon">📋</div>
                <span>New Bill</span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="/payments/create" class="quick-action-btn">
                <div class="icon">💳</div>
                <span>Record Payment</span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="/customers/create" class="quick-action-btn">
                <div class="icon">👥</div>
                <span>Add Customer</span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="/products/create" class="quick-action-btn">
                <div class="icon">📦</div>
                <span>Add Product</span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="/journal-entries/create" class="quick-action-btn">
                <div class="icon">✏️</div>
                <span>Journal Entry</span>
            </a>
        </div>
    </div>
</div>
