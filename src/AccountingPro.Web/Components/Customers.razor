    private void ShowCreateModal()
    {
        customerForm = new CreateCustomerDto();
        isEditing = false;
        showModal = true;
    }

    private void EditCustomer(CustomerDto customer)
    {
        customerForm = new CreateCustomerDto
        {
            Name = customer.Name,
            Email = customer.Email,
            Phone = customer.Phone,
            Address = customer.Address,
            City = customer.City,
            State = customer.State,
            ZipCode = customer.ZipCode,
            Country = customer.Country,
            CreditLimit = customer.CreditLimit,
            Status = customer.Status
        };
        editingCustomerId = customer.Id;
        isEditing = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        customerForm = new CreateCustomerDto();
        isEditing = false;
    }

    private async Task SaveCustomer()
    {
        // This would normally call a service to save to the API
        if (isEditing)
        {
            var existingCustomer = customers.First(c => c.Id == editingCustomerId);
            existingCustomer.Name = customerForm.Name;
            existingCustomer.Email = customerForm.Email;
            existingCustomer.Phone = customerForm.Phone;
            existingCustomer.Address = customerForm.Address;
            existingCustomer.City = customerForm.City;
            existingCustomer.State = customerForm.State;
            existingCustomer.ZipCode = customerForm.ZipCode;
            existingCustomer.Country = customerForm.Country;
            existingCustomer.CreditLimit = customerForm.CreditLimit;
            existingCustomer.Status = customerForm.Status;
        }
        else
        {
            var newCustomer = new CustomerDto
            {
                Id = customers.Max(c => c.Id) + 1,
                Name = customerForm.Name,
                Email = customerForm.Email,
                Phone = customerForm.Phone,
                Address = customerForm.Address,
                City = customerForm.City,
                State = customerForm.State,
                ZipCode = customerForm.ZipCode,
                Country = customerForm.Country,
                CreditLimit = customerForm.CreditLimit,
                Status = customerForm.Status,
                OutstandingBalance = 0,
                TotalInvoices = 0
            };
            customers.Add(newCustomer);
        }
        
        FilterCustomers();
        CloseModal();
    }

