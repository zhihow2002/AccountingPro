@using AccountingPro.Core.Enums
@model AccountingPro.Application.DTOs.InvoicePrintDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice #@Model.InvoiceNumber</title>
    <style>
        @@page {
            size: A4;
            margin: 0;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 11pt;
            line-height: 1.6;
            color: #333;
            background: #fff;
        }
        
        .invoice-container {
            max-width: 210mm;
            margin: 0 auto;
            padding: 20mm;
            background: white;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 3px solid #2c3e50;
        }
        
        .company-info {
            flex: 1;
        }
        
        .company-name {
            font-size: 28pt;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 10px;
        }
        
        .company-details {
            color: #7f8c8d;
            font-size: 10pt;
            line-height: 1.8;
        }
        
        .invoice-title {
            text-align: right;
        }
        
        .invoice-label {
            font-size: 36pt;
            font-weight: bold;
            color: #3498db;
            margin-bottom: 10px;
        }
        
        .invoice-meta {
            text-align: right;
            color: #7f8c8d;
            font-size: 10pt;
        }
        
        .invoice-meta div {
            margin-bottom: 5px;
        }
        
        .invoice-meta strong {
            color: #2c3e50;
        }
        
        .info-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
        }
        
        .info-box {
            flex: 1;
            padding: 20px;
            background: #f8f9fa;
            border-left: 4px solid #3498db;
        }
        
        .info-box:last-child {
            margin-left: 20px;
        }
        
        .info-box h3 {
            font-size: 11pt;
            color: #2c3e50;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .info-box p {
            margin-bottom: 5px;
            font-size: 10pt;
            color: #555;
        }
        
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        
        .items-table thead {
            background: #2c3e50;
            color: white;
        }
        
        .items-table th {
            padding: 12px;
            text-align: left;
            font-weight: 600;
            font-size: 10pt;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .items-table th:last-child,
        .items-table td:last-child {
            text-align: right;
        }
        
        .items-table tbody tr {
            border-bottom: 1px solid #ecf0f1;
        }
        
        .items-table tbody tr:hover {
            background: #f8f9fa;
        }
        
        .items-table td {
            padding: 12px;
            font-size: 10pt;
        }
        
        .items-table .description {
            color: #7f8c8d;
            font-size: 9pt;
            font-style: italic;
        }
        
        .totals-section {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 40px;
        }
        
        .totals {
            width: 300px;
        }
        
        .totals-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            font-size: 11pt;
        }
        
        .totals-row.subtotal,
        .totals-row.tax,
        .totals-row.discount {
            border-bottom: 1px solid #ecf0f1;
        }
        
        .totals-row.total {
            background: #2c3e50;
            color: white;
            padding: 15px 20px;
            margin-top: 10px;
            font-size: 14pt;
            font-weight: bold;
        }
        
        .notes-section {
            margin-bottom: 40px;
            padding: 20px;
            background: #fff3cd;
            border-left: 4px solid #ffc107;
        }
        
        .notes-section h3 {
            font-size: 11pt;
            color: #856404;
            margin-bottom: 10px;
        }
        
        .notes-section p {
            font-size: 10pt;
            color: #856404;
            white-space: pre-wrap;
        }
        
        .footer {
            text-align: center;
            padding-top: 20px;
            border-top: 2px solid #ecf0f1;
            color: #7f8c8d;
            font-size: 9pt;
        }
        
        .payment-terms {
            margin-top: 20px;
            padding: 15px;
            background: #e8f4f8;
            border-left: 4px solid #3498db;
            font-size: 10pt;
        }
        
        .status-badge {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 9pt;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .status-paid {
            background: #d4edda;
            color: #155724;
        }
        
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        
        .status-overdue {
            background: #f8d7da;
            color: #721c24;
        }
        
        @@media print {
            .invoice-container {
                padding: 15mm;
            }
            
            .items-table tbody tr:hover {
                background: transparent;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <!-- Header -->
        <div class="header">
            <div class="company-info">
                <div class="company-name">@Model.CompanyName</div>
                <div class="company-details">
                    <div>@Model.CompanyAddress</div>
                    <div>@Model.CompanyPhone</div>
                    <div>@Model.CompanyEmail</div>
                    @if (!string.IsNullOrEmpty(Model.CompanyTaxId))
                    {
                        <div>Tax ID: @Model.CompanyTaxId</div>
                    }
                </div>
            </div>
            <div class="invoice-title">
                <div class="invoice-label">INVOICE</div>
                <div class="invoice-meta">
                    <div><strong>Invoice #:</strong> @Model.InvoiceNumber</div>
                    <div><strong>Date:</strong> @Model.InvoiceDate.ToString("MMM dd, yyyy")</div>
                    <div><strong>Due Date:</strong> @Model.DueDate.ToString("MMM dd, yyyy")</div>
                    <div>
                        @if (Model.Status == InvoiceStatus.Paid)
                        {
                            <span class="status-badge status-paid">@Model.Status</span>
                        }
                        else if (Model.Status == InvoiceStatus.Overdue)
                        {
                            <span class="status-badge status-overdue">@Model.Status</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">@Model.Status</span>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Bill To / Ship To -->
        <div class="info-section">
            <div class="info-box">
                <h3>Bill To</h3>
                <p><strong>@Model.CustomerName</strong></p>
                @if (!string.IsNullOrEmpty(Model.CustomerCompany))
                {
                    <p>@Model.CustomerCompany</p>
                }
                @if (!string.IsNullOrEmpty(Model.CustomerAddress))
                {
                    <p>@Model.CustomerAddress</p>
                }
                @if (!string.IsNullOrEmpty(Model.CustomerCity))
                {
                    <p>@Model.CustomerCity, @Model.CustomerState @Model.CustomerZipCode</p>
                }
                @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                {
                    <p>Email: @Model.CustomerEmail</p>
                }
                @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                {
                    <p>Phone: @Model.CustomerPhone</p>
                }
            </div>
            <div class="info-box">
                <h3>Invoice Details</h3>
                <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
                <p><strong>Invoice Date:</strong> @Model.InvoiceDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Due Date:</strong> @Model.DueDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Payment Terms:</strong> @(Model.Terms ?? "Net 30")</p>
                @if (Model.PaidAmount > 0)
                {
                    <p><strong>Amount Paid:</strong> @Model.PaidAmount.ToString("C")</p>
                    <p><strong>Balance Due:</strong> @Model.BalanceAmount.ToString("C")</p>
                }
            </div>
        </div>
        
        <!-- Items Table -->
        <table class="items-table">
            <thead>
                <tr>
                    <th style="width: 5%;">#</th>
                    <th style="width: 40%;">Description</th>
                    <th style="width: 10%;">Quantity</th>
                    <th style="width: 15%;">Unit Price</th>
                    <th style="width: 10%;">Tax</th>
                    <th style="width: 10%;">Discount</th>
                    <th style="width: 10%;">Amount</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                    var taxAmount = item.UnitPrice * item.Quantity * item.TaxRate / 100;
                    var discountAmount = Model.DiscountAmount > 0 ? (Model.DiscountAmount / Model.Items.Count) : 0;
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            <strong>@item.ProductName</strong>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <div class="description">@item.Description</div>
                            }
                        </td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@taxAmount.ToString("C")</td>
                        <td>@(discountAmount > 0 ? discountAmount.ToString("C") : "-")</td>
                        <td><strong>@item.LineTotal.ToString("C")</strong></td>
                    </tr>
                }
            </tbody>
        </table>
        
        <!-- Totals -->
        <div class="totals-section">
            <div class="totals">
                <div class="totals-row subtotal">
                    <span>Subtotal:</span>
                    <span>@Model.SubTotal.ToString("C")</span>
                </div>
                @if (Model.DiscountAmount > 0)
                {
                    <div class="totals-row discount">
                        <span>Discount:</span>
                        <span>-@Model.DiscountAmount.ToString("C")</span>
                    </div>
                }
                @if (Model.TaxAmount > 0)
                {
                    <div class="totals-row tax">
                        <span>Tax:</span>
                        <span>@Model.TaxAmount.ToString("C")</span>
                    </div>
                }
                <div class="totals-row total">
                    <span>TOTAL:</span>
                    <span>@Model.TotalAmount.ToString("C")</span>
                </div>
            </div>
        </div>
        
        <!-- Notes -->
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="notes-section">
                <h3>Notes / Additional Information</h3>
                <p>@Model.Notes</p>
            </div>
        }
        
        <!-- Payment Terms -->
        @if (!string.IsNullOrEmpty(Model.Terms))
        {
            <div class="payment-terms">
                <strong>Payment Terms:</strong> @Model.Terms
            </div>
        }
        
        <!-- Footer -->
        <div class="footer">
            <p>Thank you for your business!</p>
            <p>This invoice was generated by AccountingPro</p>
            <p style="margin-top: 10px; font-size: 8pt;">
                If you have any questions about this invoice, please contact us at @Model.CompanyEmail
            </p>
        </div>
    </div>
</body>
</html>
