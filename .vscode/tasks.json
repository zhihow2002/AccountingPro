{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-web",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/AccountingPro.Web/AccountingPro.Web.csproj", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-api",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/AccountingPro.Api/AccountingPro.Api.csproj", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-all",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/AccountingPro.sln", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-web",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "run", "--project", "${workspaceFolder}/src/AccountingPro.Web/AccountingPro.Web.csproj"],
      "problemMatcher": "$msCompile",
      "group": "build",
      "isBackground": true
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": ["clean", "${workspaceFolder}/AccountingPro.sln", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": ["restore", "${workspaceFolder}/AccountingPro.sln"],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
